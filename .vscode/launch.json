{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug NestJS",
        "runtimeArgs": [
          "-r",
          "ts-node/register",
          "-r",
          "tsconfig-paths/register"
        ],
        "args": [
          "${workspaceFolder}/src/main.ts"
        ],
        "cwd": "${workspaceFolder}",
        "internalConsoleOptions": "openOnSessionStart",
        "skipFiles": ["<node_internals>/**"],
        "env": {
          "TS_NODE_PROJECT": "tsconfig.json"
        }
      }
    ]
  }
  